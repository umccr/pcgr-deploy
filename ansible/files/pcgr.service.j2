[Unit]
Description=PCGR sample consumer process
After=network-online.target

[Service]
Type=simple
WorkingDirectory= {{ os.user }}
EnvironmentFile= {{ pcgr.mount }}/pcgr/venv/bin/activate
ExecStart= /bin/sh -c '{{ pcgr.mount }}/pcgr/venv/bin/python3 {{ pcgr.mount }}/pcgr/pcgr_consumer.py pcgr ap-southeast-2 pcgr 10 10 /home/ubuntu'

[Install]
WantedBy=multi-user.target